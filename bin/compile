#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

url=http://codefirst.org/mzp/ocaml4.00.1_opam1.00.tgz
lib=http://codefirst.org/mzp/libs.tgz

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

echo "-----> Fetching OCaml binaries"
dir=/tmp/ocaml
rm -fr $dir
mkdir -p $dir
curl  $url -s -o - | tar xzf - -C $dir

echo "-----> Fetching OCaml libraries"
rm -fr /tmp/opam
mkdir -p /tmp/opam
curl $lib -s -o - | tar xzf - -C /tmp/opam

echo "-----> Prepending $dir/bin to PATH"
export PATH="$dir/bin:$PATH"

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make"

make 2>&1 | indent
